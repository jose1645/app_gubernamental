<?xml version="1.0" encoding="utf-8" ?>
<StackLayout Padding="20" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sombrero.Controls.flyoutpageheader_control">
    <StackLayout Orientation="Horizontal" Spacing="10">
        <Border BackgroundColor="AliceBlue"
         StrokeThickness="0">
            <Grid ColumnDefinitions="Auto, *"
             Padding="0"
                  Margin="0,35,20,20"
           ColumnSpacing="20">
                <Image Grid.Column="0"
                       BackgroundColor="AliceBlue"
                     
         Source="sombrero.png"
            Aspect="AspectFill"
            HeightRequest="70"
            WidthRequest="70"
                
                />
                <Label x:Name="lblUserEmail" Grid.Column="1"
                Text="fsdf"
            VerticalTextAlignment="Center"
            FontSize="15"
            FontAttributes="Bold"
            TextColor="Black"
                BackgroundColor="AliceBlue"/>
            </Grid>
        </Border>

    </StackLayout>
    <Label x:Name="lblUserName" FontSize="13" FontAttributes="Bold" />
</StackLayout>




